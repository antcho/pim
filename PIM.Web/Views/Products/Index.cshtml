@model IEnumerable<Entities.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create", "Products")" class="gi-2x glyphicon glyphicon-plus" style="color:darkseagreen; text-decoration:none;">
    </a>
</p>
@using (Html.BeginForm())
{
    <div class="form-group form-inline">
        Filtrer: @Html.TextBox("Search", null, new { @placeholder = "Nom de produit, catégorie, ...", @class = "form-control" })
        <input type="submit" value="Filtrer" class="btn btn-default" />
    </div>
}
@foreach (var item in Model) {
    <div class="card" style="margin-bottom:5px;">
        <h2 class="h2-ribbon">@Html.DisplayFor(modelItem => item.Category)</h2>
        <div class="row">
            <div class="col-lg-4">
                <img src=@item.Image style="width:80%; height:20%;  margin:5px;" />
            </div>
            <div class="col-lg-5">
                <h3><a href="@Url.Action("Details", "Products", new { id=item.Reference })" style="color:blue; text-decoration:none;">@Html.DisplayFor(modelItem => item.Name)</a></h3>
                <p>
                    @Html.DisplayFor(modelItem => item.Description)
                </p>
                @Html.DisplayFor(modelItem => item.ValidityDate)

            </div>
            <div class="col-lg-3">
                <h2>@Html.DisplayFor(modelItem => item.Price)</h2>
                <p>
                    <input type="submit" value="Voir" class="btn btn-primary" onclick="location.href='@Url.Action("Details", "Products", new { id=item.Reference })'" />
                </p>
                <p>
                    <a href="@Url.Action("Edit", "Products", new { id=item.Reference })" class="glyphicon glyphicon-edit" text-decoration:none;">
                    </a>
                    <a href="@Url.Action("Details", "Products", new { id=item.Reference })" class="glyphicon glyphicon-info-sign" style="color:blue; text-decoration:none;">
                    </a>
                    <a href="@Url.Action("Delete", "Products", new { id=item.Reference })" class="glyphicon glyphicon-remove" style="color:red; text-decoration:none;">
                    </a>
                </p>
            </div>
             <br />

        </div>
    </div>
}
